ip addr add 20.0.1.3/24 dev eth4

/usr/share/openvswitch/scripts/ovs-ctl --system-id=random start
ovs-vsctl add-br s3
ovs-vsctl add-port s3 eth0
ovs-vsctl add-port s3 eth1
